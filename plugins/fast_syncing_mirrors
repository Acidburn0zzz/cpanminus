name        'fast_syncing_mirrors';
description 'Use fast-syncing PAUSE mirrors';
author      'Tatsuhiko Miyagawa';

api_version 0.1;

hook configure_mirrors => sub {
    my $args = shift;

    push @{$args->{mirrors}}, (
        'http://cpan.cpantesters.org',
        'http://cpan.hexten.net',
        'http://www.cpan.org',
    );
};
